  "main_panel@common_dialogs.main_panel_no_buttons": {
    "controls": [
      {
        "background@api.base_image": {
          "size": ["65%", "53%"],
          "alpha": 0.8,
          "$texture": "textures/goldrush/botaniste/bg_botaniste",
          "controls": [
            {"title@botaniste.title":  {}},
            {"close@botaniste.close_button":  {}},
            {"description@botaniste.desc": {}},
