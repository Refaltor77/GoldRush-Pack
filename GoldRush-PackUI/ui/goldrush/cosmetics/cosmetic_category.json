{
  "namespace": "cosmetic_category",


  // INTERFACE UI
  "main_panel@common_dialogs.main_panel_no_buttons": {
    "controls": [
      {
        "background@api.base_image": {
          "size": ["100%", "100%"],
          "alpha": 0.8,
          "$texture": "textures/goldrush/cosmetics/bg",
          "controls": [
            {"close@cosmetic_category.close_button":  {}},

            {
              "buttons@cosmetic_category.buttons_layers": {
                "controls": [
                  {"title@cosmetic_category.title": {}},
                  {"hats_button@cosmetic_category.hat":  {}},
                  {"back_button@cosmetic_category.back":  {}},
                  {"capes_button@cosmetic_category.cape":  {}},
                  {"costumes_button@cosmetic_category.costumes":  {}},
                  {"others_button@cosmetic_category.others":  {}},
                  {"pets_button@cosmetic_category.pets":  {}}
                ]
              }
            }
          ]
        }
      }
    ]
  },



  // BUTTONS STYLES
  "hat@api.template_button_stack_panel": {
    "$pressed_button_name": "button.form_button_click",
    "size": ["33%", "48% - 2px"],
    "offset": [0, 3],
    "$text_offset": [0, 0],
    "$button_text": "",
    "$button_text_binding_type": "collection",
    "$button_state_panel|default": "common_buttons.new_ui_button_panel",
    "$button_text_grid_collection_name": "form_buttons",
    "$default_button_texture": "textures/ui/cosmetics/button_hats",
    "$hover_button_texture": "textures/ui/cosmetics/button_hats_hover",
    "$pressed_button_texture": "$hover_button_texture",
    "$locked_button_texture": "$hover_button_texture",
    "$text_color": "white",
    "$text_color_hover": "white",
    "$shadow": true,
    "$condition": "(#form_button_text = 'Hats')",
    "alpha": 0.8,
    "$font_scale_factor": 1.0,
    "anchor_to": "top_left",
    "anchor_from": "top_left"
